{
    "name": "tuxonice/pt-zipcode-finder",
    "description": "Portugal zipcode search package with SQLite database",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tlab\\PtZipcodeFinder\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Helder Correia",
            "email": "tuxboy@tlab.pt",
            "role" : "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0 || ^7.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-pdo_sqlite": "*",
        "doctrine/collections": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.3"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "bin": [
        "bin/zipcode-importer"
    ]
}
